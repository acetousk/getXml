<!--Service Location webroot.LocaleServices.get#ValidateLocaleScripts--><service verb="get" noun="ValidateLocaleScripts"><in-parameters><parameter name="locale" type="java.util.Locale" default="ec.user.locale"/></in-parameters><out-parameters><parameter name="messagesLocation"/><parameter name="methodsLocation"/></out-parameters><actions><if condition="locale == null"><return/></if><set field="language" from="locale.getLanguage()"/><if condition="'en'.equals(language)"><return/></if><set field="country" from="locale.getCountry()"/><set field="baseUrl" value="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/localization/"/><set field="messagesLocales" from="new HashSet(['ar','az','bg','bn_BD','ca','cs','da','de','el','es_AR','es','es_PE',                     'et','eu','fa','fi','fr','ge','gl','he','hr','hu','hy_AM','id','is','it','ja','ka','kk','ko','lt','lv','mk',                     'my','nl','no','pl','pt_BR','pt_PT','ro','ru','sd','si','sk','sl','sr_lat','sr','sv','th','tj','tr','uk','ur','vi','zh','zh_TW'])"/><set field="methodsLocales" from="new HashSet(['de','es_CL','fi','nl','pt'])"/><set field="messagesLocation" from="null"/><set field="methodsLocation" from="null"/><if condition="country"><set field="localeStr" from="language + '_' + country"/><if condition="messagesLocales.contains(localeStr)"><set field="messagesLocation" from="baseUrl + 'messages_' + localeStr + '.min.js'"/></if><if condition="methodsLocales.contains(localeStr)"><set field="methodsLocation" from="baseUrl + 'methods_' + localeStr + '.min.js'"/></if></if><if condition="!messagesLocation && messagesLocales.contains(language)"><set field="messagesLocation" from="baseUrl + 'messages_' + language + '.min.js'"/></if><if condition="!methodsLocation && methodsLocales.contains(language)"><set field="methodsLocation" from="baseUrl + 'methods_' + language + '.min.js'"/></if><if condition="!messagesLocation && language == 'pt'"><set field="messagesLocation" from="baseUrl + 'messages_pt_P